<table>
  <thead>
    <tr>
      <th><%= t('.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('.show'), user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.books'), books_path %>

<%= paginate @users %>
